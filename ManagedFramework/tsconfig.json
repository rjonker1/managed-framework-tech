{
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipDefaultLibCheck": true,
        "removeComments": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "lib": [ "es2015", "dom" ],
        "types": [ "node" ]
    },
    "files": [
        "ClientApp/app/app.module.ts",
        "ClientApp/main.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true
    },
    "compileOnSave": false,
    "buildOnSave": false
    //"exclude": [ "bin", "node_modules" ],
    //"atom": { "rewriteTsconfig": false }
}
